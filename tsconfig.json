{
    "compilerOptions": {
        "strictNullChecks": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "jsx": "preserve",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "target": "es6",
        "lib": ["dom", "es7"],
        "typeRoots": ["node_modules/@types", "typings"],
        "outDir": "./lib"
    },
    "exclude": ["node_modules", "dist", "site"]
}
